/**index.wxss**/
.container {
	background-color: #F2f2f2;
	min-height: 100%;
}
.banner-container{
  	width: 750rpx;
  	position: relative;  
}
.banner-container .swiper-box{
  	width: 100%;
 	height:562.5rpx;
}
.banner-container .swiper-box swiper-item image{
	width: 100%;
  	display: inline-block;
  	overflow: hidden;
  	height:562.5rpx;
}
.banner-container .dots{  
  	position: absolute;  
  	left: 0;  
  	right: 0;  
  	bottom: 20rpx;  
  	display: flex;  
  	justify-content: center;  
}  
.banner-container .dots .dot{  
  	margin: 0 8rpx;  
  	width: 14rpx;  
  	height: 14rpx;  
  	background: #fff;  
  	border-radius: 50%;  
  	transition: all .6s;  
  	opacity: .5;
}  
.banner-container .dots .dot.active{  
  	width: 14rpx;  
  	opacity: 1;
}

