/**index.wxss**/
.container {
	background-color: #F2f2f2;
	min-height: 100%;
}
.banner-container{
  	width: 750rpx;
  	position: relative;  
}
.banner-container .swiper-box{
  	width: 100%;
 	height:562.5rpx;
}
.banner-container .swiper-box swiper-item image{
	width: 100%;
  	display: inline-block;
  	overflow: hidden;
  	height:562.5rpx;
}
.banner-container .dots{  
  	position: absolute;  
  	left: 0;  
  	right: 0;  
  	bottom: 20rpx;  
  	display: flex;  
  	justify-content: center;  
}  
.banner-container .dots .dot{  
  	margin: 0 8rpx;  
  	width: 14rpx;  
  	height: 14rpx;  
  	background: #fff;  
  	border-radius: 50%;  
  	transition: all .6s;  
  	opacity: .5;
}  
.banner-container .dots .dot.active{  
  	width: 14rpx;  
  	opacity: 1;
}
.nav-container{width: 100%;height: 88rpx;background-color: #fff;overflow: hidden;}
.nav-navbar{white-space: nowrap;height: 88rpx;width: 100%;background-color: #fff;}
.nav-navbar-box{width:160rpx;box-sizing: content-box;font-size: 30rpx;line-height: 84rpx;text-align: center;display: inline-block;overflow: hidden;}
.nav-navbar-item{border-bottom: 4rpx solid #fff;}
.naver-item-on{border-bottom: 4rpx solid #e64340;}

.search-container{position:fixed;left:0;right:0;top:0;z-index:500;width: 100%;height: 100rpx;background: gray;display: flex;flex-direction: column;background:rgba(105,195,170,0.3);}
.search-content{background: white;width:650rpx;display: flex;flex-direction: row;align-items: center;padding-top: auto;padding-left: 20rpx;padding-bottom: auto;margin: auto;height: 70rpx;border-radius:5px 5px;}
.search-icon{width: 40rpx;height: 40rpx;margin-right: 20rpx;}
.search-input{width: 500rpx;font-size: 28rpx;}
.search-btn{width: 150rpx;height: 70rpx;margin-right: 0rpx;background-color:blueviolet;font-size: 28rpx;align-items: center;border-top-left-radius: 0rpx;border-bottom-left-radius: 0rpx;color:#fff;border:none;position: relative;}

.goods-container{display: flex;justify-content: space-between;flex-wrap:wrap;box-sizing: content-box;padding: 24rpx;}
.goods-content{width: 339rpx;height: 472rpx;background-color: #fff;overflow: hidden;margin-bottom: 24rpx;}
.goods-img-box{width: 339rpx;height: 339rpx;overflow: hidden;}
.goods-img-box .image{width: 339rpx;height: 339rpx;}
.goods-content .goods-title{width: 280rpx;text-overflow: ellipsis;white-space: nowrap;overflow: hidden;font-size: 30rpx;padding: 24rpx 0 0rpx 0;color:#000;margin-left: 24rpx;}
.goods-content .goods-prices{display:flex;}
.goods-content .goods-prices .goods-price{width: 280rpx;overflow: hidden;font-size: 30rpx;padding: 24rpx 0;color:#e64340;margin-left: 24rpx;}
.goods-price-no{color:#aaa !important;text-decoration:line-through;}




