<view class="container">
    <view class="remind-box" wx:if="{{remind}}">
        <image class="remind-img" src="/images/start/loading.gif"></image>
    </view>
    <view wx:else>
        <image class="title" src="/images/start/title8.png"></image>
        <view class="cont">
            <view class="cont-hd" style="transform:rotateZ({{angle}}deg);">
                <image class="logo" src="{{userInfo.avatarUrl}}" />
                <image class="wave" src="/images/start/wave.png" mode="aspectFill"></image>
                <image class="wave wave-bg" src="/images/start/wave.png" mode="aspectFill"></image>
            </view>
            <view class="cont-bd">
                <image class="smalltitle" src="/images/start/confirm-word1.png" />
                <view class="cont-bd-btn" bindtap='goToIndex'>
                    <text>进入店铺</text>
                </view>
            </view>
        </view>
    </view>
</view>